        <tr>
          <td><a href="boiler">Boiler</a></td>
          <td><a id="boiler-temperature"></a><a> &deg;C</a></td>
          <td><a id="boiler-volume"></a><a> L</a></td>
        </tr>
        <tr>
          <td><a href="fermenter">Fermenter</a></td>
          <td><a id="fermenter-temperature"></a></td>
          <td><a id="fermenter-volume"></a></td>
